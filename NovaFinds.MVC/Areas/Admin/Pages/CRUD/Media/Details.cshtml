@model NovaFinds.MVC.Areas.Admin.Pages.CRUD.Media.DetailsModel

@{ ViewData["Title"] = "Media Details"; }

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Image Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image!.Id)
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image!.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image!.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image!.Image)
        </dt>
        <dd class="col-sm-10">
            <img class="img-md" src="@Html.DisplayFor(model => model.Image!.Image)" style="height:300px; width:300px;" alt=""/>
        </dd>
    </dl>
</div>
<div>
    <div class="btn-group mt-4" role="group">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Image!.Id">Edit</a>
        <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>
</div>