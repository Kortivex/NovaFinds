@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NovaFinds.MVC.Areas.Admin.Pages.CRUD.Roles.CreateModel

@{ ViewData["Title"] = "Role Create"; }

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role!.Name"></label>
                <input asp-for="Role!.Name" class="form-control"/>
                <span asp-validation-for="Role!.Name" class="text-danger"></span>
            </div>
            <div class="btn-group" role="group">
                <input class="btn btn-primary" type="submit" value="Create"/>
                <a class="btn btn-outline-primary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>