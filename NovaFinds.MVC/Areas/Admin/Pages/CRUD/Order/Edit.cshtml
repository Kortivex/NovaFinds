@page
@model NovaFinds.MVC.Areas.Admin.Pages.CRUD.Order.EditModel

@{ ViewData["Title"] = "Order Edit"; }

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Order!.Status"></label>
                <select asp-for="Order!.Status" class="form-control" asp-items="ViewBag.OrderStatusType"></select>
                <span asp-validation-for="Order!.Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Order!.Id"/>
            <div class="btn-group" role="group">
                <input type="submit" value="Update" class="btn btn-primary"/>
                <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>