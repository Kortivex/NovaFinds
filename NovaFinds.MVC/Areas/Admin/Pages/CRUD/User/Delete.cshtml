@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NovaFinds.MVC.Areas.Admin.Pages.CRUD.User.DeleteModel

@{ ViewData["Title"] = "User Delete"; }

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this user, with <strong>Email</strong>: <span class="font-italic font-weight-light">@Model.UserDto!.Email</span> and <strong>ID</strong>: <span class="font-italic font-weight-light">@Model.UserDto.Id</span>?</h3>

<form method="post">
    <input type="hidden" asp-for="UserDto!.Id"/>
    <div class="btn-group" role="group">
        <input class="btn btn-danger" type="submit" value="Delete"/>
        <a class="btn btn-outline-primary" asp-page="Index">Back to List</a>
    </div>
</form>