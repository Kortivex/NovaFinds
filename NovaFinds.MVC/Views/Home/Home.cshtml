@{
    ViewData["Title"] = "Home";
    var productsLatest = ViewData["ProductsLatest"] as List<ProductDto>;
    var productsCheapest = ViewData["ProductsCheapest"] as List<ProductDto>;
}
<section class="padding-y">
    <main class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-xl-12 col-lg-12">

                    <div id="carousel_indicator" class="slider-home-banner carousel" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel_indicator" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel_indicator" data-slide-to="1"></li>
                            <li data-target="#carousel_indicator" data-slide-to="2"></li>
                            <li data-target="#carousel_indicator" data-slide-to="3"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/banners/slide1.jpg" alt="First banner">
                            </div>
                            <div class="carousel-item">
                                <img src="images/banners/slide2.jpg" alt="Second banner">
                            </div>
                            <div class="carousel-item">
                                <img src="images/banners/slide3.jpg" alt="Third banner">
                            </div>
                            <div class="carousel-item">
                                <img src="images/banners/slide4.jpg" alt="Four banner">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel_indicator" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel_indicator" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</section>

<section class="padding-bottom-sm">

    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Cheaper items</h4>
    </header>

    <div class="row row-sm">
        @if (productsCheapest != null){
            foreach (var product in productsCheapest){
                var productUrl = $"/Product/{product.Id}/Show";
                var productCategoryUrl = $"/Category/{product.Category!.Id}/Show";
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="@productUrl" class="card card-sm card-product-grid">
                        <a href="@productUrl" class="img-wrap">
                            <img src="@product.ProductImages!.First()!.Image" alt=""/>
                        </a>
                        <figcaption class="info-wrap">
                            <a href="@productUrl" class="title text-uppercase text-black-50">@product.Name</a>
                            <hr/>
                            <a href="@productCategoryUrl" class="title">@product.Category.Name</a>
                            <div class="price mt-1">@product.Price.ToString("0.##€")</div>
                        </figcaption>
                    </div>
                </div>
            }
        }
    </div>
</section>

<section class="padding-bottom-sm">

    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Latest items</h4>
    </header>

    <div class="row row-sm">
        @if (productsLatest != null){
            foreach (var product in productsLatest){
                var productUrl = $"/Product/{product.Id}/Show";
                var productCategoryUrl = $"/Category/{product.Category!.Id}/Show";
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="@productUrl" class="card card-sm card-product-grid">
                        <a href="@productUrl" class="img-wrap">
                            <span class="badge badge-danger">NEW</span>
                            <img src="@product.ProductImages!.First()!.Image" alt="">
                        </a>
                        <figcaption class="info-wrap">
                            <a href="@productUrl" class="title text-uppercase text-black-50">@product.Name</a>
                            <hr/>
                            <a href="@productCategoryUrl" class="title">@product.Category.Name</a>
                            <div class="price mt-1">@product.Price.ToString("0.##€")</div>
                        </figcaption>
                    </div>
                </div>
            }
        }
    </div>
</section>